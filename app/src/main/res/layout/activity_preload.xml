<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/Layout_preload"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/gradiente_fondo"
tools:context="com.example.joel_64.apppnp.PreloadActivity">

<ImageView
    android:id="@+id/imageView2"
    android:layout_width="99dp"
    android:layout_height="144dp"
    app:srcCompat="@drawable/logo_policia"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintHorizontal_bias="0.501"
    app:layout_constraintVertical_bias="0.393" />

<TextView
    android:textColor="#fff"
    android:textSize="16dp"
    android:id="@+id/textView19"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="POLICIA PERUANA"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginBottom="26dp"
    app:layout_constraintBottom_toTopOf="@+id/imageView2"
    app:layout_constraintHorizontal_bias="0.502" />

<TextView
    android:id="@+id/mensaje_fail"
    android:textColor="#fff"
    android:layout_width="250dp"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:text=""
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</android.support.constraint.ConstraintLayout>
